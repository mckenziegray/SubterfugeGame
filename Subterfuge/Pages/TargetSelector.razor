@page "/selecttarget/{agentType:int}"
@inject GameService Game

<div class="row">
    <div class="col center-horizontal">
        <h2>Day @Game.Day</h2>
        <p>Select the @Agent.Name's target.</p>

        @foreach (Agent agent in Game.Agents.ShuffledList)
        {
            <button @onclick="() => SetTarget(agent)" class="btn btn-dark">@agent.Codename</button>
        }

        <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
    </div>
</div>

@code {
    [Parameter]
    public int AgentType { get; set; } // Blazor route params don't yet support enums

    protected Agent Agent { get; set; }

    protected override void OnParametersSet()
    {
        Agent = Game.Agents[(AgentType)AgentType];
    }

    protected void SetTarget(Agent agent)
    {
        Agent.IsActing = true;
        Agent.Target = agent;
        Nav.NavigateTo("/selectagents");
    }

    protected void Cancel()
    {
        Nav.NavigateTo("/selectagents");
    }
}
